<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.g13c1921.biomap.GeoDetailsActivity"
    android:background="@android:color/holo_green_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Geographic details"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Co-ordinates:"
        android:id="@+id/textView12"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Altitude:"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nearest Town"
        android:id="@+id/textView14"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/test"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView14"
        android:background="#ffffff"
        android:hint="Enter nearest town" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/co_ords"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignEnd="@+id/test"
        android:background="#ffffff" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/altitude"
        android:layout_alignTop="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="metres"
        android:id="@+id/textView15"
        android:layout_alignBottom="@+id/altitude"
        android:layout_toEndOf="@+id/textView11" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/editText5"
        android:background="#ffffff"
        android:layout_above="@+id/editText2"
        android:layout_toStartOf="@+id/co_ords"
        android:hint="enter country" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/editText6"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignEnd="@+id/test"
        android:background="#ffffff"
        android:hint="Enter Province" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/spin"
        android:entries="@array/environment"
        android:background="@color/material_grey_300"
        android:layout_below="@+id/test"
        android:layout_alignStart="@+id/editText5"></Spinner>

    <!--ScrollView
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:id="@+id/scrollView"
        android:background="@android:color/background_light"
        android:layout_above="@+id/add_photos"
        android:layout_alignStart="@+id/spin" /-->

    <Button
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:text="Add Photo(s)"
        android:id="@+id/add_photos"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:background="@color/material_grey_800"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:id="@+id/editText7"
        android:background="#ffffff"
        android:hint="enter description of locality"
        android:layout_above="@+id/add_photos"
        android:layout_alignParentStart="true" />


</RelativeLayout>
